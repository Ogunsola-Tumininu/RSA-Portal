@model IEnumerable<PalRSA.Core.DataAccess.ChangeOfNameProfile>

@{
    ViewBag.Title = "Change of Names";
}


<script type="text/javascript">
    $(document).ready(function() {
        $('#change-of-name').DataTable();
    });
</script>

<div class="rightside  retirement">
    <div class="details">
    </div>
    <h3>Change of Name Requests</h3>
    <div class="right-details">
        <div class="right-top-text">All Transactions</div>
        <div class="table-responsive main-transaction">
            <table class="table table-condensed" id="change-of-name">
                <thead>
                    <tr>
                        <th>Pin</th>
                        <th>Old Name</th>
                        <th>New Name</th>
                        <th>Date Uploaded</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null)
                        {
                            foreach (var update in Model)
                            {
                                <tr>
                                    <td>@update.Pin</td>
                                    <td>@update.OldName</td>
                                    <td>@update.NewName</td>
                                    <td>@update.DateUploaded.Value.ToString("MMM dd, yyyy")</td>
                                    <td>@Html.ActionLink("Approve Name Change", "ApproveNameChange", new { id = update.Id }, new { @class = "glyphicon glyphicon-plus" })</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

