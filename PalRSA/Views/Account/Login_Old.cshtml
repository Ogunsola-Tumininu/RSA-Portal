@using PalRSA.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

@Styles.Render("~/Content/login.css")
@Styles.Render("~/Content/bootstrap.min.css")

@*<script type="text/javascript">
    $(document).ready(function () {
        $(".navbar").hide();
		$(".admin-nav").hide();
    });
</script>*@

<div id="bg"><img src="~/images/template-bg.jpg"></div>

<header class="admin-header">
    <div class="container-fluid">
        <div class="logo col-md-3"><a href="http://palrsa.palpensions.com/"><img src="~/images/logo3.png" alt="logo" /> </a></div>
    </div>
</header>

@if(TempData["failure"] != null)
    {
      <p class="alert alert-danger"> @TempData["failure"] </p>
    }
else
{
    <p class="alert alert-success"> @TempData["success"] </p>
}

<div class="cont-row">
    @*<div>
        <span class="" style="font-size:x-large; color:#000000;">
            This site is under maintenance. The content is being updated and will be completed in a shortwhile. Please bear with us.
        </span>&nbsp;
    </div>*@
    <div class="col-md-12 cont-drow">
        <div class="cont-text col-md-3 col-sm-3"><span class="span-admin">Customer</span><br><span class="span-login">Login</span></div>
        <div class="cont-login col-md-2 col-sm-2 col-xs-2"><img src="~/images/login.png" alt="login image"></div>
        <div class="cont-middle col-md-5 col-sm-5">
            <div>
                @Html.Partial( "_Response")
            </div>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {

                @*@Html.AntiForgeryToken()*@
                @Html.ValidationSummary(true)
                <div class="cont-user-info">
                    @Html.TextBoxFor(m => m.Username, new { @class = "user-name", @placeholder = "RSA Pin" })
                    <br>
                    <div class="cont-line"></div>
                    @Html.PasswordFor(m => m.Password, new { @class = "pass-word", @placeholder = "Password" })
					
					<div class="login-icon">
					<input class="btn btn-primary but-login" type="submit" value="" />
					</div>	
                </div>
            }
            <div class="forgot-password"><span class="forgot-pass">Forgot your password?</span> <span>@Html.ActionLink("Click here", "ForgotPassword")</span></div>
            <div class="RSA"><span class="rsa-question">You don't have an RSA yet?</span> <span class="open-rsa"><a href="https://www.palpensions.com/need-a-pal/">Open RSA NOW!</a></span></div>
        </div>
        <div class="cont-div col-md-2 col-sm-2"><div class="client-login"><a href="/Account/AdminLogin">Admin Login <img src="~/images/login-bg2.png"></a></div></div>
    </div>
</div>	

<div class="clearfix"></div>	
<div class="copy-right">&copy; @DateTime.Now.Year. PAL Pensions. All Rights Reserved</div>


 