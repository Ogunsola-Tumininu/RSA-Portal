@model IEnumerable<PalRSA.Core.DataAccess.Publication>
@{
    ViewBag.Title = "Publications";
}



<script type="text/javascript">
    $(document).ready(function() {
        $('#news-letters').DataTable();
    });
</script>

<div class="rightside retirement">
<div class="details">
 <h3>News Letters</h3>
</div>
   
    <div class="right-details">
        <div class="right-top-text">All Publications</div>
        <div class="table-responsive main-transaction">
            <table class="table table-condensed" id="news-letters">
                <thead>
                    <tr>
                        <th>Publication Name</th>
                        <th>Date Uploaded</th>
                        <th>Publication Type</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model != null)
                        {

                            foreach (var news in Model)
                            {
                                <tr>
                                    <td>@news.PublicationName</td>
                                    <td>@news.DateUploaded.ToString("MMM dd, yyyy")</td>
                                    <td>@news.UploadType.UploadTypeValue</td>
                                    <td>@Html.ActionLink("View", "ViewPublication", new {id = news.PublicationsId}, new {@class = "glyphicon glyphicon-globe"})</td>
                                    <td>@Html.ActionLink("Remove", "DeletePublication", new { id = news.PublicationsId }, new { @class = "glyphicon glyphicon-remove" })</td>
                                </tr>
                            }

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>