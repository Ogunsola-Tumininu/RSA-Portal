@model PalRSA.Core.DataAccess.Employee

@{
    ViewBag.Title = "Change Manager";
}

<script type="text/javascript" src="~/Scripts/new-profile-validator.js"></script>


<div class="rightside view-profile changemanager">

<div class="details">
<h3>Change Manager</h3>
</div>

    @if ((bool)TempData["Status"] == true)
    {
        <div class="alert alert-success exceed">
            <span class="glyphicon glyphicon-ok"></span> <strong>Success!</strong><span class="stat"> Manager Changed Successfully</span>
        </div>
    }

    <div class="">
        @using (Html.BeginForm("ChangeManager", "Admin", FormMethod.Post, new { @class = "form-horizontal", id = "edit-manager" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">Employee Name</span></h4>
                    <p> @Model.FirstName @Model.Surname</p>
                </div>
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">Current Manager</span></h4>
                    @Html.DropDownListFor(model => model.AccountManager.ManagerId, ViewData["Managers"] as SelectList, "--Select Upload Type--", new { @class = "form-control" })
                    @Html.HiddenFor(model => model.Pin)
                    @Html.HiddenFor(model => model.Email)
                    @Html.HiddenFor(model => model.FirstName)
                    @Html.HiddenFor(model => model.Surname)
                    @Html.HiddenFor(model => model.MobileNumber)
                </div>
            </div>

<br/>
            <div class="row">
                <div class="col-md-2 pull-right">
                    <input type="submit" value="Save Changes" class="btn-primary btn-block" />
                </div>
            </div>
        }
    </div>
</div>

