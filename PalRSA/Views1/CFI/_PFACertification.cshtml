@model PalRSA.Core.Models.CFIUpdateViewModel

<link href="~/Content/BiometricSite.css" rel="stylesheet" />
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">PFA Certification</h3>
                </div>
                <div class="box-body divBoxHeight">
                    @*<div class="row">*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group required">
                                <label class="control-label">I hereby certify that the information given above is correct to the best of my knowledge : </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group required">
                                <label class="control-label col-md-5">Designation : </label>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.DesignationPFA, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DesignationPFA, "", new { @class = "text-red" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group required">
                                <label class="control-label col-md-5">Date : </label>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(m => m.PFADate, new { @class = "datePicker", @style = "height: 34px;margin-right: 7px;" })
                                    @Html.ValidationMessageFor(m => m.PFADate, "", new { @class = "text-red", @style = "display:block;" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <button type="button" href="javascript:void(0)" onclick="$('#officeUseOnly').click();" id="pretab" class="btn btn-block btn-primary ">Previous</button>
                </div>

                <div class="col-md-2">
                    <button type="button" href="javascript:void(0)" onclick="$('#images').click();" id="nexttab" class="btn btn-block btn-primary ">Next</button>

                </div>
            </div>

        </div>

    </div>
</section>


@section scripts{

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


}


