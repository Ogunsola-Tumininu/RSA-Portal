@model PalRSA.Core.Models.ChangeOfName
@{
    ViewBag.Title = "ChangeName";
}

<script type="text/javascript" src="~/Scripts/new-profile-validator.js"></script>

<div class="rightside  view-profile">
    <div class="details">
        <h3>Change of Name</h3>
    </div>

    @if ((string)TempData["Status"] == "success")
    {
        <div class="alert alert-success exceed">
            <span class="glyphicon glyphicon-ok"></span> <strong>Success!</strong><span class="stat"> Change of Name recieved. We will alert you once its approved</span>
        </div>
    }
    else if ((string)TempData["Status"] == "invalid")
    {
        <div class="alert alert-warning col-md-12" id="warning">
            <span class="glyphicon glyphicon-record"></span> <strong>Warning!</strong> <span class="message"> Please check your entries</span>
        </div>
    }

    <div class="">
        @using (Html.BeginForm("ChangeName", "Customer", FormMethod.Post, new { @class = "form-horizontal", id = "change-of-name", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">Old Surname</span></h4>
                    @Html.TextBoxFor(model => model.OldName, new {@class = "form-control", @readonly = true})
                    @Html.HiddenFor(model => model.Pin)
                    @Html.HiddenFor(model => model.Sex)
                </div>
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">New Surname</span></h4>
                    @Html.TextBoxFor(model => model.NewName, new {@class = "form-control", placeholder = "New Name"})
                </div>
            </div>


            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">Old First Name</span></h4>
                    @Html.TextBoxFor(model => model.OldFirstName, new { @class = "form-control", @readonly = true })
                </div>
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">New First Name</span></h4>
                    @Html.TextBoxFor(model => model.NewFirstName, new { @class = "form-control", placeholder = "New First Name" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">Old Middle Name</span></h4>
                    @Html.TextBoxFor(model => model.OldMiddleName, new {@class = "form-control", @readonly = true})
                </div>
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">New Middle Name</span></h4>
                    @Html.TextBoxFor(model => model.NewMiddleName, new {@class = "form-control", placeholder = "New Middle Name"})
                </div>
            </div>

            <div class="row">
                @if (Model.Sex == "M")
                {
                    <div class="col-md-6 col-sm-6">
                        <h4><span class="label label-default">Court Affidavit</span></h4>
                        @Html.TextBoxFor(model => model.Doc1, new {@class = "form-control", type = "file"})
                    </div>
                }
                else
                {
                    <div class="col-md-6 col-sm-6">
                        <h4><span class="label label-default">Marriage Certificate</span></h4>
                        @Html.TextBoxFor(model => model.Doc1, new {@class = "form-control", type = "file"})
                    </div>
                }
                <div class="col-md-6 col-sm-6">
                    <h4><span class="label label-default">Newspaper Publication</span></h4>
                    @Html.TextBoxFor(model => model.Doc2, new {@class = "form-control", type = "file"})
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <h4><span class="label label-default">Description</span></h4>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Describe why you want to change your name" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2 pull-right">
                    <input type="submit" value="Save Changes" class="btn-primary btn-block" />
                </div>
            </div>
        }
    </div>
</div>
